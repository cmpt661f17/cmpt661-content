<h1>HTML5 localStorage Example</h1>
<h3>Enter Items And Quantity</h3>
<form name=ShoppingList>

    <div id="PlayArea">
        <table>
            <tr>

                <td><b>Item:</b><input type="text" id="productName" name="productName"></td>
                <td><b>Quantity:</b><input type="text" id="quantity" name="quantity"></td>

            </tr>

            <tr>
                <td>
                    <input type=button value="Save" onclick="SaveItem()">
                    <!--<input type=button value="Modify" onclick="ModifyItem()">-->
                    <input type=button value="Remove" onclick="RemoveItem()">
                </td>
            </tr>
        </table>
    </div>

    <div id="items_table">
        <h2>Shopping List</h2>
        <table id=list></table>
        <p>
            <label><input type=button value="Clear" onclick="ClearAll()">
                <i>* Removes all items</i></label>
        </p>
    </div>
</form>

<script src="views/js/cart-storage.js"></script>